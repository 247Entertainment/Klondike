<h1>{{actionLabel}} Account</h1>

<label>
    Username
    {{input type="text" value=username}}
</label>

<label>
    Api Key
    {{input type="text" value=key placeholder="(Leave blank to generate)"}}
</label>

<fieldset>
    <legend>Permissions</legend>

    {{view App.CheckboxGroup
        name="roles"
        selection=roles
        content=App.roles
        checkboxLabelPath="content.label"
        checkboxValuePath="content.name"}}
</fieldset>

<button {{action "save"}}>Save</button>

{{#if canDelete}}
<button {{action "delete"}}>Delete Account</button>
{{/if}}

{{#if errorMessage}}
<div class="error">
    {{errorMessage}}
</div>
{{/if}}
