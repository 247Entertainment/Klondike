<footer>
  <dl>
    {{#with view.content as stats}}
      <dt>Total Packages</dt>
      <dd>{{stats.totalPackages}}</dd>
      <dt>Synchronizer State</dt>
      <dd>
          {{stats.synchronizationState}}
          {{#if stats.packagesToIndex}}
              {{stats.completedPackages}} / {{stats.packagesToIndex}}
          {{/if}}
      </dd>
    {{/with}}

    <dt>Klondike</dt>
    <dd>{{view.version}}</dd>
  </dl>
</footer>
