<div>
  {{view "select"
    value=originFilter
    content=originFilters
    optionValuePath="content.value"
    optionLabelPath="content.label"}}

  {{view "select"
    value=sortBy
    content=sortByColumns
    optionValuePath="content.value"
    optionLabelPath="content.label"}}

  {{view "select"
    value=includePrerelease
    content=versionFilters
    optionValuePath="content.value"
    optionLabelPath="content.label"}}

  {{view "select"
    value=latestOnly
    content=latestOnlyFilters
    optionValuePath="content.value"
    optionLabelPath="content.label"}}

  {{#link-to 'packages.advanced-search'}}advanced search{{/link-to}}
</div>

<h1>
    {{#if isEmptyQuery}}
        List of All Packages
    {{else}}
        Search results for "{{query}}"
    {{/if}}
</h1>

{{#if total}}
    Showing {{first}} to {{last}} of {{total}}.

    {{#if hasPrevious}}
        <a href="#" {{action "previousPage"}} rel="nofollow">Previous Page</a>
    {{/if}}
    {{#if hasNext}}
        <a href="#" {{action "nextPage"}}>Next Page</a>
    {{/if}}

    <ol {{bind-attr start=first}}>
        {{#each hit in hits}}
        <li>
            <div>
                {{package-icon url=hit.iconUrl}}
                {{#link-to 'packages.view' hit}}
                  {{#if hit.title}}
                      {{hit.title}}
                  {{else}}
                      {{hit.id}}
                  {{/if}}
                  {{hit.version}}
                {{/link-to}}
            </div>
            <div>
                By:
                {{#each author in hit.authors}}
                    {{#link-to 'packages.search' (query-params query=author page=0) rel="nofollow"}}{{author}}{{/link-to}}
                {{/each}}
            </div>
            <div>
                {{hit.description}}
            </div>
            <div>
                Tags:
                {{#each tag in hit.tags}}
                    {{#link-to 'packages.search' (query-params query=tag page=0) rel="nofollow"}}{{tag}}{{/link-to}}
                {{/each}}
            </div>
            <div>
              Downloads:
              {{#if hit.downloadCount}}
                {{hit.downloadCount}}
                {{#unless controller.latestOnly}}
                  total,
                  {{hit.versionDownloadCount}} of this version
                {{/unless}}
              {{else}}
                0
              {{/if}}
            </div>
        </li>
        {{/each}}
    </ol>

    {{#if hasPrevious}}
        <a href="#" {{action "previousPage"}} rel="nofollow">Previous Page</a>
    {{/if}}
    {{#if hasNext}}
        <a href="#" {{action "nextPage"}} rel="nofollow">Next Page</a>
    {{/if}}
{{else}}
    No results :'(
{{/if}}
