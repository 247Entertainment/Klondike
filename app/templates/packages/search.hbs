<h1>Search results for "{{query}}"</h1>
{{#if total}}
    Showing {{first}} to {{last}} of {{total}}.

    {{#if hasPrevious}}
        <a href="#" {{action previousPage}}>Previous Page</a>
    {{/if}}
    {{#if hasNext}}
        <a href="#" {{action nextPage}}>Next Page</a>
    {{/if}}

    <ol {{bind-attr start=first}}>
        {{#each hits}}
        <li>
            <div>
                {{view App.PackageIcon contentBinding="this"}}
                {{#link-to 'packages.view' this}}
                {{#if title}}
                    {{title}}
                {{else}}
                    {{id}}
                {{/if}}
                {{/link-to}}
            </div>
            <div>
                By:
                {{#each author in authors}}
                    <a href="#" {{action goTo author}}>{{author}}</a>
                {{/each}}
            </div>
            <div>
                {{description}}
            </div>
            <div>
                Tags:
                {{#each tag in tags}}
                    <a href="#" {{action goTo tag}}>{{tag}}</a>
                {{/each}}
            </div>
        </li>
        {{/each}}
    </ol>

    {{#if hasPrevious}}
        <a href="#" {{action previousPage}}>Previous Page</a>
    {{/if}}
    {{#if hasNext}}
        <a href="#" {{action nextPage}}>Next Page</a>
    {{/if}}
{{else}}
    No results :'(
{{/if}}
