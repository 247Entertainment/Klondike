{{#if error}}
  <div class="error">
    An error occurred processing the query: {{errorMessage}}
  </div>
{{/if}}

<div>
Tip: hit <code>ctrl+space</code> to see all search fields.
</div>

{{auto-complete-text-input value=query terms=model action="search"}}

<button {{action "search"}}>Search</button>

<h2>Sample Queries</h2>

<table>
  <thead>
    <th>Query</th>
    <th>Description</th>
    <th/>
  </thead>
  <tbody>
    {{#each example in examples}}
    <tr>
      <td><code>{{example.query}}</code></td>
      <td>{{example.description}}</td>
      <td><a href="#" {{action "selectExample" example.query}}>Try it</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
